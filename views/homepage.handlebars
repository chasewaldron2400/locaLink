{{!< main}}

{{!-- Section for Search and Categories --}}
<section class="search-and-categories">
  <div class="search-box">
    <input type="text" placeholder="Search for businesses..." aria-label="Search businesses">
    <button type="submit">Search</button>
  </div>
  <div class="categories-list">
    <h3>Explore by Category</h3>
    <ul>
      <li><a href="/category/restaurants">Restaurants</a></li>
      <li><a href="/category/shops">Shops</a></li>
      <li><a href="/category/services">Services</a></li>
      <li><a href="/category/entertainment">Entertainment</a></li>
    </ul>
  </div>
</section>

{{!-- Featured Businesses --}}
<section class="featured-businesses">
  <h2>Featured Businesses</h2>
  <div class="business-cards">
    {{#each featured_businesses as |business|}}
    <article class="business-card">
      <img src="{{business.image}}" alt="{{business.name}} Logo">
      <h4>{{business.name}}</h4>
      <p>{{business.description}}</p>
      <a href="/business/{{business.id}}">Learn more</a>
    </article>
    {{/each}}
  </div>
</section>

{{!-- Latest Reviews --}}
<section class="latest-reviews">
  <h2>Latest Reviews</h2>
  <div class="reviews">
    {{#each reviews as |review|}}
    <div class="review">
      <strong>{{review.user}}</strong> on <em>{{review.business_name}}</em>
      <blockquote>{{review.content}}</blockquote>
      <div class="rating">Rating: {{review.rating}}/5</div>
    </div>
    {{/each}}
  </div>
</section>
